{
  "name": "api-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node --files src/server.ts",
    "build": "tsc",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --dataSource ./src/database.ts",
    "migration:up": "yarn typeorm migration:run",
    "migration:down": "yarn typeorm migration:revert",
    "migration:create": "cd ./src/db/migrations && typeorm migration:create",
    "migration:generate": "yarn typeorm migration:generate ./src/db/migrations/enterFileName"
  },
  "dependencies": {
    "@nettiwork/common": "file:./../@nettiwork/common",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "email-validator": "^2.0.4",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "livekit-server-sdk": "^2.10.2",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.10.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.1",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "juice": "^11.0.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18"
  }
}
